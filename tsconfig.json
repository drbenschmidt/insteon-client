{
    "exclude": [
      "node_modules"
    ],
    "compilerOptions": {
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "rootDir": "./",
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "allowJs": true,
      "declaration": false,
      "declarationMap": false,
      "sourceMap": false,
      "noEmit": true,
      "typeRoots": [
        "./node_modules/@types"
      ],
      "lib": [
        "es2018",
        "dom"
      ]
    }
  }