  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/src/index.ts",
      "preLaunchTask": "tsc: build - tsconfig.json",
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program 2",
      "program": "${workspaceFolder}/sandbox/demo.ts",
      "sourceMaps": true,
      "trace": "all",
      "outFiles": [
          "${workspaceFolder}/dist/**/*.js"
      ]
    }
  ]
}